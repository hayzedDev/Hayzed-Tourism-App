extends baseEmail 

block content
    p Hi #{firstName},
    p Forgot your password? Change it here: #{url}.
    //- p (Website for this action not yet implemented!)
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
      tbody
        tr
          td(align='left')
            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
              tbody
                tr
                  td
                    a(href=`${url}`, target='_blank') Reset your password
    p If you did not make the request, please ignore this message.
